<%- include("./templates/header.ejs") %>

<div class="container mt-4 pt-4">
    <div class="row d-flex justify-content-center">
        <div class="card">
            <div class="card-body">
                <div class="col-12 d-flex justify-content-between align-items-center p-4">
                    <h1>Students</h1>
                    <button type="button" class="btn btn-success" data-mdb-toggle="modal" data-mdb-target="#addModal">
                        <i class="fa-solid fa-plus fa-xl"></i>
                    </button>
                    <%- include("./templates/addModal.ejs")%>
                </div>
                <div class="col-12 my-3 table-responsive">
                    <table class="table align-middle bg-white">
                                
                        <thead class="bg-dark text-white">
                          <tr>
                            <th>Full Name</th>
                            <th>Direction</th>
                            <th>Status</th>
                            <th>Position</th>
                            <th>Actions</th>
                          </tr>
                        </thead>
                        
                        <tbody>
                            <% students?.forEach(student => { %>
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <img src="images/<%=student.image%>" style="width: 45px; height: 45px" class="rounded-circle" />
                                            <div class="ms-3">
                                                <p class="fw-bold mb-1"><%=student.full_name%></p>
                                            </div>
                                        </div>
                                    </td>
                                    
                                    <td>
                                        <p class="fw-normal mb-1">
                                            <%= student.direction %>
                                        </p>
                                    </td>

                                    <td>
                                        <% if(student.status === 1){ %>
                                            <span class="badge badge-success rounded-pill d-inline">
                                                Active
                                            </span>
                                        <% } else { %>
                                            <span class="badge badge-warning rounded-pill d-inline">
                                                Not Active
                                            </span>
                                        <% } %>
                                        
                                    </td>

                                    <td>
                                        <%= student.level %>
                                    </td>

                                    <td>
                                        <button type="button" onclick="editFunc('<%=student.id%>')" class="btn btn-primary" data-mdb-toggle="modal" data-mdb-target="#editModal">
                                            <i class="fa-solid fa-pen-to-square fa-xl"></i>
                                        </button>
                                        <%- include("./templates/editModal.ejs")%>
                                        
                                        
                                        <button type="button" onclick="deleteFunc('<%=student.id%>')" class="btn btn-danger" data-mdb-toggle="modal" data-mdb-target="#deleteModal">
                                            <i class="fa-solid fa-trash fa-xl"></i>
                                        </button>
                                        <%- include("./templates/deleteModal.ejs")%>
                                    </td>

                                </tr>
                            <% }) %>
                        </tbody>
                    </table>                    
                </div>
            </div>
          </div>
    </div>
</div>

<%- include("./templates/footer.ejs") %>
